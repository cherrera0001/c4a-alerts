# C4A Alerts - Configuración de Variables de Entorno
# Copia este archivo como .env y configura tus valores

# =============================================================================
# CONFIGURACIÓN DE TELEGRAM
# =============================================================================

# Token del bot de Telegram (obtener de @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# ID del chat o canal donde enviar las alertas
# Para obtener el chat_id:
# 1. Envía un mensaje al bot
# 2. Visita: https://api.telegram.org/bot<YOUR_BOT_TOKEN>/getUpdates
CHAT_ID=your_chat_id_here

# =============================================================================
# CONFIGURACIÓN DE SLACK (OPCIONAL)
# =============================================================================

# Webhook URL de Slack
SLACK_WEBHOOK_URL=your_slack_webhook_url_here

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================

# URL de conexión a la base de datos
DATABASE_URL=your_database_url_here

# =============================================================================
# CONFIGURACIÓN DE API
# =============================================================================

# Clave secreta para la API
SECRET_KEY=your_secret_key_here

# Modo de desarrollo
DEBUG=True

# =============================================================================
# CONFIGURACIÓN DE MISP (OPCIONAL)
# =============================================================================

# URL del servidor MISP
MISP_URL=your_misp_server_url_here

# Clave API de MISP
MISP_API_KEY=your_misp_api_key_here

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================

# Nivel de logging (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
