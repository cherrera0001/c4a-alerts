# .flake8 - Configuración personalizada de estilo de código para c4a-alerts

[flake8]
# Longitud máxima de línea permitida
max-line-length = 120

# Ignorar advertencias específicas para hacer el flujo más limpio
# E203: espacio antes de ':', OK en slicing [por compatibilidad con Black]
# W503: break de línea antes de operador binario, OK [recomendación nueva de PEP8]
ignore = 
    E203, 
    W503

# Excluir carpetas innecesarias para el análisis
exclude = 
    .git,
    __pycache__,
    src/__pycache__,
    tests/,
    .github/,
    *.pyc,
    .venv/,
    env/,
    venv/

# Opcional: Máxima complejidad aceptable para funciones (10 = moderado)
max-complexity = 10

# Mostrar estadísticas al final
statistics = True
