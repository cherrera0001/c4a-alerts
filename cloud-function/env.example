# Configuración del Bot de Telegram
TELEGRAM_TOKEN=your_telegram_bot_token_here

# Configuración de Acceso Restringido
ADMIN_USER_ID=123456789  # Tu ID de usuario de Telegram
READ_ONLY_MODE=true      # true = solo lectura, false = acceso completo

# Configuración de C4A Alerts
C4A_API_URL=http://localhost:8000

# Configuración de Notificaciones
ADMIN_CHAT_ID=123456789  # Chat ID para notificaciones administrativas

# Configuración de Seguridad
LOG_LEVEL=INFO
ENABLE_MALWARE_DETECTION=true
ENABLE_ACCESS_CONTROL=true

# Configuración del Webhook (para producción)
WEBHOOK_URL=https://your-domain.com/telegram_webhook
WEBHOOK_SECRET=your_webhook_secret_here
